<?xml version="1.0"?>
<tool_dependency>
    <package name="ngs_sdk" version="1.1.3">
        <install version="1.0">
            <actions>
                <action type="download_file" target_filename="ngs-1.1.3.tar.gz">https://github.com/ncbi/ngs/archive/1.1.3.tar.gz</action>
                <action type="shell_command">
                    tar -xf ngs-1.1.3.tar.gz
                </action>
                <action type="change_directory">ngs-1.1.3/ngs-sdk</action>
                <action type="autoconf">--prefix=$INSTALL_DIR --build=$INSTALL_DIR</action>
                <action type="set_environment">
                    <environment_variable name="PATH" action="prepend_to">$INSTALL_DIR/bin</environment_variable>
                    <environment_variable name="NGS_SDK_DIR" action="set_to">$INSTALL_DIR</environment_variable>
                </action>
            </actions>
        </install>
        <readme>
            ncbi-ngs-sdk, required for sra-tools package.

        </readme>
    </package>
</tool_dependency>
