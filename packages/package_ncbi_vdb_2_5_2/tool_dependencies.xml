<?xml version="1.0"?>
<tool_dependency>
    <package name="ngs_sdk" version="1.1.3">
        <repository  name="package_ngs_sdk_1_1_3" owner="mvdbeek" prior_installation_required="True" />
    </package>
    <package name="ncbi_vdb" version="2.5.2">
        <install version="1.0">
            <actions>
                <action type="set_environment_for_install">
                    <repository name="package_ngs_sdk_1_1_3" owner="mvdbeek">
                        <package name="ngs_sdk" version="1.1.3" />
                    </repository>
                </action>
                <action type="download_file" target_filename="ncbi-vdb-2.5.2.tar.gz">https://github.com/ncbi/ncbi-vdb/archive/2.5.2.tar.gz</action>
                   <action type="shell_command">
                    tar -xf ncbi-vdb-2.5.2.tar.gz
                    </action>
                <action type="move_directory_files">
                    <source_directory>ncbi-vdb-2.5.2</source_directory>
                    <destination_directory>$INSTALL_DIR/ncbi-vdb-2.5.2</destination_directory>
                </action>
                <action type="change_directory">$INSTALL_DIR/ncbi-vdb-2.5.2</action>
                <action type="autoconf">--with-ngs-sdk-prefix=$NGS_SDK_DIR --prefix=$INSTALL_DIR --build=$INSTALL_DIR</action>
                <action type="set_environment">
                    <environment_variable name="NCBI_VDB_DIR" action="set_to">$INSTALL_DIR</environment_variable>
                    <environment_variable name="NCBI_VDB_SRC_DIR" action="set_to">$INSTALL_DIR/ncbi-vdb-2.5.2</environment_variable>
                </action>
            </actions>
        </install>
        <readme>
            ncbi-vdb, required for sra-tools package.
        </readme>
    </package>
</tool_dependency>
