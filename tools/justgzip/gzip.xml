<tool id="justgzip" name="Gzip sequence datasets" version="0.2.0">
    <description></description>
    <stdio>
        <exit_code range="1:" level="fatal" description="Tool exception" />
    </stdio>
    <command detect_errors="exit_code"><![CDATA[
        #if $input1.ext == "fastq"
            gzip -c '${input1}' > $output1
        #else if $input1.ext == "fastqsanger"
            gzip -c '${input1}' > $output2
        #else if $input1.ext == "fastqillumina"
            gzip -c '${input1}' > $output3
        #else if $input1.ext == "fastqsolexa"
            gzip -c '${input1}' > $output4
        #end if
        ]]>
    </command>
    <inputs>
        <param format="fastq" name="input1" type="data" label="Input file" help="Choose the file to compress" />
    </inputs>
    <outputs>
        <data name="output1" format="fastq.gz" label="$input1.name" >
            <filter>input1.ext == "fastq"</filter>
        </data>
        <data name="output2" format="fastqsanger.gz" label="$input1.name" >
            <filter>input1.ext == "fastqsanger"</filter>
        </data>
        <data name="output3" format="fastqillumina.gz" label="$input1.name" >
            <filter>input1.ext == "fastqillumina"</filter>
        </data>
        <data name="output4" format="fastqsolexa.gz" label="$input1.name" >
            <filter>input1.ext == "fastqsolexa"</filter>
        </data>
    </outputs>
    <tests>
        <test>
            <param name="input1" value="file1" ftype="fastq" />
            <output name="output" file="file1.gz" decompress="True" ftype="fastq.gz"/>
        </test>
        <test>
            <param name="input1" value="file1" ftype="fastqsanger" />
            <output name="output" file="file1.gz" decompress="True" ftype="fastqsanger.gz" />
        </test>   
    </tests>
    <help>

        .. class:: infomark

        **What it does**

        Just **gzip** fastq, fastqillumina, fastqsanger, and fastqsolexa datasets.

    </help>
</tool>



